@model Event;
@{

    Layout = "_LayoutEvent";
}

<div class="shadow-none" style="width: 100%; margin-left: 5px; margin-right:50px; margin-top:20px;margin-bottom:20px; text-align:left;background-color:ghostwhite">
    @using (Html.BeginForm("", "CreateEvent", FormMethod.Post))
    {
        <div class="form-group mb-3">

            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "fs-5" })


            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

        </div>

        <div class="form-group mb-3">

            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker " } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>


        <div class="form-group mb-3">

            @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">

            @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control timepicker " } })
        </div>


        <div class="form-group mb-3">

            @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "fs-5" })


            <div>@Html.RadioButtonFor(model => model.Type, "public", new { htmlAttributes = new { @class = "form-control " } }) Public</div>
            <div>@Html.RadioButtonFor(model => model.Type, "private", new { htmlAttributes = new { @class = "form-control " } }) Private</div>

        </div>


        <div class="form-group mb-3">

            @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "fs-5" })
            @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control", @max = 4, @min = 0 } })
        </div>

        <div class="form-group mb-3">

            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group mb-3">

            @Html.LabelFor(model => model.OtherDetails, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.OtherDetails, new { htmlAttributes = new { @class = "form-control" } })
        </div>


        <div class="form-group mb-4">

            @Html.LabelFor(model => model.InviteByEmail, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.InviteByEmail, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="row mb-5" style="margin-left:5px;">
            <button type="submit" class="btn btn-success fs-5 ps-5 pe-5 ">Create</button>
        </div>
    }
</div>