@{
    Layout = "_LayoutEvent";
}
<div style="display: flex; flex-direction: column; align-items: center;">
    <div style="width: 1240px;">
        <h3 class="display-4" style="text-align:center;">All Events</h3>
        <div style="display:flex; gap:20px; flex-wrap: wrap;">
            @foreach (var e in ViewBag.AdminEvent)
            {
                <a asp-action="Index" asp-controller="GetEvent" asp-route-id="@e.EventId" asp-route-name="MyEvent">
                    <div class="card border shadow mx-2" style="align-items: center; min-width: 200px; margin-bottom: 3px; float: left; margin-right: 3px; padding: 12px; background-color: lavender; border-radius: 10px;">

                        <h5 class="card-title">@e.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted"><b>Description :</b> @e.Description</h6>
                        <h6 class="card-subtitle mb-2 text-muted"><b>Date :</b> @e.Date.ToShortDateString()</h6>
                        <h6 class="card-subtitle mb-2 text-muted"><b>Duration :</b> @e.Duration</h6>
                        <h6 class="card-subtitle mb-2 text-muted"><b>Location :</b> @e.Location</h6>
                        <h6 class="card-subtitle mb-2 text-muted"><b>StartTime :</b> @e.StartTime</h6>
                    </div>
                </a>
            }
        </div>
    </div>
</div>